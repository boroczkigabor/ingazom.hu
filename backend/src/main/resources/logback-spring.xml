<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="./logs" />

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %white(%d{ISO8601}) %highlight(%-5level) [%cyan(%t)] [%yellow(%40.40logger{20})]: %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="Console" />
    </root>

    <logger name="org.atos.commutermap" level="debug" additivity="false">
        <appender-ref ref="Console" />
    </logger>

    <logger name="org.springframework.jdbc.datasource.DriverManagerDataSource" level="debug">
        <appender-ref ref="Console" />
    </logger>

    <logger name="com.zaxxer.hikari" level="debug">
        <appender-ref ref="Console" />
    </logger>

    <logger name="org.hibernate.SQL" level="debug">
        <appender-ref ref="Console" />
    </logger>
    
</configuration>